@model List<Models.VoitureVM>

	@{
		ViewData["Title"] = "Liste des voiture";
	}
<style>
	body {
		background-color: lightgray;
	}
</style>

@foreach (var item in Model)
{
	<div class="card" style="margin-bottom:30px;">
		<div class="card-header">
			Id = @item.Id
		</div>
		<div class="card-body">
			<a asp-action="Detail" asp-route-id="@item.Id" style="text-decoration:none;color:black;"><h5 class="card-title">@item.Name</h5></a>
			<p class="card-text">@item.Description</p>
			<a asp-action="Update" asp-controller="Voiture" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
			<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary" style="background-color:red">Delete</a>
		</div>
	</div>

}

