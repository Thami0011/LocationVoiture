﻿
@model Models.CategorieVM

<link rel="stylesheet" href="~/css/form.css">

<form asp-controller="Home" asp-action="Create" method="post">
	  
	<div class="container">
		<div class="box1">
			Categorie : <input class="name" asp-for="@Model.Name">
		</div>

		<div class="box2">
			<label>Description :</label>  <textarea name="description" class="desc" id="" cols="30" rows="10" asp-for="@Model.Description"></textarea>
		</div>

		<div class="box3">
			image : <input type="text" asp-for="@Model.Image">
		</div>


		<input class="button" type="submit" value="Save" />
	</div>
</form>
