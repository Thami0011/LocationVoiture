@model List<Models.VoitureVM>
<style>
	.navbar {
		background-color: rgb(33, 37, 41);
	}

	.navbar {
		border-bottom-left-radius:0;
	}
	body{
		overflow-y:scroll;
	}

	#color {
		color: white;
	}

</style>
<div class="container-fluid" style="left:0;position: absolute">
	<div class="row flex-nowrap">
		<div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
			<div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
				<ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
					<li class="nav-item">
						<a asp-controller="Home" class="nav-link align-middle px-0 sidebar">
							<i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
						</a>
					</li>
					
					<li>
						<a asp-controller="Categorie" class="nav-link px-0 align-middle sidebar">
							<i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">Categories</span>
						</a>
					</li>
					
					<li>
						<a href="#submenu3" data-bs-toggle="collapse" class="nav-link px-0 align-middle sidebar">
							<i class="fs-4 bi-grid"></i> <span class="ms-1 d-none d-sm-inline">Products</span>
						</a>
						<ul class="collapse nav flex-column ms-1" id="submenu3" data-bs-parent="#menu">
							@foreach(var voiture in Model)
							{
								<li class="w-100">
									<a href="#@voiture.Name" class="nav-link px-0"> <span class="d-none d-sm-inline" style="color:white; margin-left:2rem;">@voiture.Name</span></a>
								</li>
							}
							
						</ul>
					</li>
					<li>
						<a href="#" class="nav-link px-0 align-middle sidebar">
							<i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline ">Contact</span>
						</a>
					</li>
				</ul>
				<hr>
				
			</div>
		</div>
		<div class="col py-3">
			<div class="container">
				<div class="row justify-content-center" >

					@foreach (var item in Model)
					{
						<div class="col-md-6 animatezoom" style="margin-bottom:10px">
							<div class="card" style="width: 100%; height: 100%;">
								
								<img src="~/images/Voitures/@item.Image" class="card-img-top" alt="@item.Image" style="height: 60%; object-fit: cover;">
								
								<div class="card-body">
									<h5 class="card-title">@item.Name</h5>
									<p class="card-text">@item.Description</p>
									<a style="background-color: orange;" asp-controller="Voiture" asp-action="Detail" asp-route-id="@item.Id"    class="btn btn-primary">More Details</a>
								</div>
							</div>
						</div>
					}

				</div>
			</div>
		</div>


	</div>
</div>
